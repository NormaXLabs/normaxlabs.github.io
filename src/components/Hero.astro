---
const { headline, tagline, cta, link } = Astro.props;
---

<section class="bg-gradient-to-b from-[#004e92] via-[#0a192f] to-[#00d4ff] text-white">
  <div class="max-w-6xl mx-auto px-4 py-32 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight reveal">
      {headline}
    </h1>
    <p class="text-lg md:text-2xl mb-10 opacity-90 reveal">{tagline}</p>
    <a href={link}
       class="inline-block rounded-full bg-white py-3 px-10 text-primary-700
              font-semibold shadow-lg hover:shadow-xl transition reveal">
      {cta}
    </a>
  </div>
</section>
