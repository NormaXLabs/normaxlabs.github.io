---
import Layout from '../layouts/BaseLayout.astro';
---

<Layout title="NormaX Labs">
  <!-- Hero con video “striscia” -->
<section class="relative w-full h-[60vh] overflow-hidden">
  <video id="heroVideo" autoplay muted playsinline class="w-full h-full object-cover">
    <source src="/videos/intro.mp4" type="video/mp4" />
    Il tuo browser non supporta il video.
  </video>

  <!-- Scritta nascosta -->
  <div id="heroText"
       class="absolute inset-0 flex items-center justify-center bg-black/40 text-white
              text-4xl md:text-6xl font-extrabold opacity-0 transition-opacity duration-1000">
    NormaX Labs, il futuro della finanza
  </div>
</section>

<script is:raw>
  const video = document.getElementById('heroVideo');
  const text  = document.getElementById('heroText');

  video.addEventListener('ended', () => {
    text.classList.remove('opacity-0');
    text.classList.add('opacity-100');
  });
</script>




  <!-- Fascia con loghi -->
  <section class="bg-white py-12">
    <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-center justify-center gap-12">
      <!-- Logo Scuola Normale -->
      <img src="/img/SNS.png" alt="Scuola Normale Superiore"
           class="h-24 md:h-40  w-auto object-contain" />

      <!-- Logo Spinoff -->
      <img src="/img/normax.png" alt="NormaX Labs"
           class="h-24 md:h-40 w-auto object-contain" />
    </div>
  </section>

  <!-- Testo sotto i loghi -->
  <section class="max-w-4xl mx-auto px-6 md:px-10 py-20 text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-6 text-slate-900">
      Costruiamo il futuro finanziario
    </h2>
    <p class="text-lg md:text-xl text-slate-600 leading-relaxed">
      Soluzioni open-source, ricerca quantitativa e innovazione senza compromessi.
    </p>
    <a href="/contacts/"
       class="inline-block mt-8 px-8 py-4 rounded-2xl text-white font-semibold
              bg-gradient-to-r from-indigo-600 to-purple-700 shadow-md hover:brightness-110">
      Parla con noi
    </a>
  </section>
</Layout>
