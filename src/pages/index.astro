---
// pages/index.astro
import Layout      from '../layouts/BaseLayout.astro';
import Hero        from '../components/Hero.astro';
import FeatureCard from '../components/FeatureCard.astro';
import { features } from '../data/features';
---

<Layout title="NormaX Labs">
  <Hero
    headline="Costruiamo il futuro finanziario"
    tagline="Soluzioni open-source, community e innovazione senza compromessi."
    cta="Parla con noi"
  />

  <section id="features" class="py-24 bg-slate-50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-16 reveal">
        Perch√© sceglierci
      </h2>

      <div class="grid gap-12 md:grid-cols-3">
        {features.map((f) => <FeatureCard {...f} />)}
      </div>
    </div>
  </section>
</Layout>
