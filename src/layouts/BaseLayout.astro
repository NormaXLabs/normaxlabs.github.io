---
// BaseLayout.astro
const { title = 'NormaX Labs', description = 'Soluzioni open-source' } = Astro.props;
const currentPath = Astro.url.pathname;
const isActive = (href: string) => currentPath === new URL(href, 'https://dummy').pathname;
---

<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/img/normax.png" />
  </head>

  <body class="font-sans text-slate-800 antialiased scroll-smooth
             bg-slate-50 bg-[radial-gradient(circle_at_top,rgba(99,102,241,0.08)_1px,transparent_1px)]
             [background-size:16px_16px]">

    <!-- Navbar “pill” -->
    <header class="sticky top-0 z-50 pt-4">
      <div class="mx-3 md:mx-8">
        <nav
          class="bg-white/90 backdrop-blur rounded-full shadow-lg ring-1 ring-slate-200
                 px-5 md:px-8 py-5 flex items-center justify-between">
          
          <!-- logo -->
          <a href="/" class="flex items-center gap-2">
            <img src="/img/normax.png" alt="Logo" class="h-20 w-20 md:h-9 md:w-9" />
            <img src="/img/char.png" alt="Logo testo" class="h-20 md:h-16 w-auto" />
          </a>

          <!-- menu desktop -->
          <ul class="hidden md:flex items-center gap-6 text-[16px] font-semibold">
            {[
              { href: '/',            label: 'HOME'           },
              { href: '/modelli',     label: 'R&D'            },
              { href: '/team',        label: 'TEAM'           },
              { href: '/contacts',    label: 'CONTATTI'       },
              { href: '/login.html',  label: 'AREA PERSONALE' }
            ].map(({ href, label }) => {
              const active = isActive(href);
              return (
                <li class="relative group">
                  <a
                    href={href}
                    class={
                      `inline-block pb-1 transition ` +
                      (active
                        ? 'text-slate-900 underline underline-offset-[6px]'
                        : 'text-slate-700 hover:text-slate-900 hover:underline underline-offset-[6px]')
                    }
                  >
                    {label}
                  </a>
                </li>
              );
            })}
          </ul>

          <!-- CTA -->
          <a href="/contacts"
             class="text-white text-sm md:text-base font-medium px-4 md:px-5 py-2 rounded-2xl
                    shadow-md transition
                    bg-gradient-to-r from-indigo-600 to-purple-700 hover:brightness-110">
            Contattaci
          </a>
        </nav>
      </div>
    </header>

    <main class="pt-40">
      <slot />           
    </main>

    <footer class="bg-slate-900 text-slate-400 text-sm py-8">
      <div class="max-w-6xl mx-auto px-4 text-center">
        © {new Date().getFullYear()} NormaX Labs — All Rights Reserved
      </div>
    </footer>

    <script src="https://unpkg.com/scrollreveal"></script>
    
  </body>
</html>
