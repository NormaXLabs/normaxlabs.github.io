---
// BaseLayout.astro
const { title = 'NormaX Labs', description = 'Soluzioni open-source' } = Astro.props;
---

<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/img/normax.png" />
  </head>

  <body class="font-sans bg-slate-50 text-slate-800 antialiased scroll-smooth">

    <!-- Navbar -->
    <header class="fixed inset-x-0 top-0 z-50 bg-white/80 backdrop-blur">
      <nav class="max-w-6xl mx-auto flex items-center justify-between px-4 py-4">
        <a href="/" class="flex items-center gap-2">
          <img src="/img/normax.png" alt="Logo" class="h-20 w-20" />
          <img src="/img/char.png" alt="Logo" class="h-32 w-36" />
        </a>
        <ul class="hidden md:flex gap-8 text-sm">
          <li><a href="/modelli" class="hover:text-primary-600">Modelli</a></li>
          <li><a href="#team"      class="hover:text-primary-600">Team</a></li>
          <li><a href="/contacts"   class="hover:text-primary-600">Contatti</a></li>
          <li><a href="/login.html"   class="hover:text-primary-600">Area Personale</a></li>
        </ul>
      </nav>
    </header>

    <main class="pt-40">
      <slot />           
    </main>

    <footer class="bg-slate-900 text-slate-400 text-sm py-8">
      <div class="max-w-6xl mx-auto px-4 text-center">
        © {new Date().getFullYear()} NormaX Labs — All Rights Reserved
      </div>
    </footer>

    <script src="https://unpkg.com/scrollreveal"></script>
    
  </body>
</html>

